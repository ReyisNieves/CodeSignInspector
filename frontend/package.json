{
  "name": "codesign-inspector-frontend",
  "version": "1.0.0",
  "description": "CodeSign Inspector - Cross-Platform Code Signing Validation Frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:renderer",
    "build:renderer": "webpack --mode production",
    "dev:renderer": "webpack serve --mode development",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "code-signing",
    "security",
    "validation",
    "electron"
  ],
  "author": "CodeSign Inspector Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0"
  },
  "build": {
    "appId": "com.codesigninspector.app",
    "productName": "CodeSign Inspector",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
